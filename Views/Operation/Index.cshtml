@model IEnumerable<kovtun.Models.Operation>

@{
    ViewBag.Title = "Operations";
}

<h2>Operations</h2>

<p>
    @Html.ActionLink("Создать новую операцию", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Workplace.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink(item.Workplace.Name, "Details", "Workplace", new { id = item.WorkplaceId }, null)
            </td>
            <td>
                @Html.ActionLink(item.Employee.Name, "Details", "Employee", new { id = item.EmployeeId }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
